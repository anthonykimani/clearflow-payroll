generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Batch {
  id         String   @id @default(uuid())
  platformId String   @map("platform_id")
  status     String   @default("draft")
  policy     Json
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  items PayoutItem[]

  @@map("batches")
}

model PayoutItem {
  id                String   @id @default(uuid())
  batchId           String   @map("batch_id")
  recipientAddress String   @map("recipient_address")
  destChainId       Int      @map("dest_chain_id")
  preferredToken    String   @map("preferred_token")
  sourceChainId     Int      @map("source_chain_id")
  sourceToken       String   @map("source_token")
  amount            Decimal
  status            String   @default("planned")
  idempotencyKey    String   @unique @map("idempotency_key")
  executionMeta     Json?    @map("execution_metadata")
  failedReason      String?  @map("failed_reason")
  retryCount        Int      @default(0) @map("retry_count")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  batch Batch @relation(fields: [batchId], references: [id])

  @@map("payout_items")
}
